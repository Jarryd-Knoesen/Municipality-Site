<head>
    <meta charset="utf-8" />
    <title>Centered Buttons</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: url('../images/Sa flag.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 10vh;
        }

        .btn {
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 12px;
            padding: 12px 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease-in-out;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #0056b3;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004080;
                color: #fff;
                transform: scale(1.05);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            }

        .button-container {
            background: rgba(255, 255, 255, 0.15); /* translucent background */
            padding: 20px;
            border-radius: 16px;
            backdrop-filter: blur(6px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="button-container">
            <div class="row">
                <!-- Column 1 -->
                <div class="col">
                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="af-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">Afrikaans</button>
                    </form>

                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="xh-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">IsiXhosa</button>
                    </form>

                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="st-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">Sesotho</button>
                    </form>

                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="ve-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">Tshivenda</button>
                    </form>
                </div>

                <!-- Column 2 -->
                <div class="col">
                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="en" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">English</button>
                    </form>

                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="zu-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">IsiZulu</button>
                    </form>

                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="tn-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">Setswana</button>
                    </form>

                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="ts-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">Xitsonga</button>
                    </form>
                </div>

                <!-- Column 3 -->
                <div class="col">
                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="nr-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">IsiNdebele</button>
                    </form>

                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="nso-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">Sepedi</button>
                    </form>

                    <form method="post" asp-controller="LanguageSelect" asp-action="SetLanguage">
                        <input type="hidden" name="culture" value="ss-ZA" />
                        <input type="hidden" name="returnUrl" value="/MainView/MainView" />
                        <button type="submit" class="btn btn-primary mb-2 w-100">SiSwati</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>

