@using PROG7312_P1_V1.Languages
<head>
    <title>Login</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: url('../images/Sa flag.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
        }

        .container {
            display: grid;
            column-gap: 15px;
            grid-template-columns: auto auto auto;
            justify-content: center;
            align-items: center;
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }

        .column {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .line-break-vertical {
            width: 5px;
            height: 275px;
            background-color: black;
        }

        .form-column {
            margin: 0 30px;
        }

        h2 {
            margin-bottom: 10px;
            font-size: 24px;
            color: #333;
        }

        p {
            margin-bottom: 0px;
            margin-top: 0;
            font-size: 14px;
            color: #555;
            display: block;
            text-align: right;
            margin: 0 5px;
        }

        a {
            color: #007bff;
            justify-content: end;
            text-decoration: none;
            font-size: 14px;
            display: block;
            text-align: right;
            margin: 0 5px;
        }

            a:hover {
                text-decoration: underline;
                }

        .form-group {
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
        }

        label {
            margin-bottom: 5px;
            font-weight: bold;
            font-size: 14px;
        }

        input[type="email"], 
        input[type="password"] {
            padding: 8px;
            margin-bottom: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button[type="submit"] {
            margin-top: 10px;
            padding: 10px;
            background-color: #007bff;
            color: white;
            font-size: 14px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #0056b3;
                }
        
        img {
            max-width: 250px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="column">
            <img src="~/images/joburg logo.svg" alt="Joburg Municipality Logo" />
        </div>

        <div class="column">
            <div class="line-break-vertical"></div>
        </div>
        
        <div class="column form-column">
            <div class="form-container">
                <h2>@Labels.lbLogin</h2>
                <p>@Labels.txtNoAccount</p>
                <a href="@Url.Action("Signup", "Login")">@Labels.aSignup</a>
                <form asp-controller="Login" asp-action="Login" method="post">
                    @if (ViewBag.ErrorLogin != null)
                    {
                        <div class="alert alert-danger" style="color: red; padding: 10px;">
                            @ViewBag.ErrorLogin
                        </div>
                    }
                    <div class="form-group">
                        <label for="email">@Labels.lbEmail</label>
                        <input type="email" id="email" name="email" placeholder="@Labels.txtEnterEmail" required>
                    </div>

                    <div class="form-group">
                        <label for="Password">@Labels.lbPassword</label>
                        <input type="password" id="password" name="password" placeholder="@Labels.txtEnterPassword" required>
                    </div>

                    <button type="submit">@Labels.btnLogin</button>
                </form>
            </div>
        </div>
    </div>
</body>