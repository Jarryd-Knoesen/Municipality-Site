@using PROG7312_P1_V1.Languages
<head>
    <meta charset="utf-8" />
    <title>Centered Buttons</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: url('../images/Sa flag.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .wide-tall-btn {
            width: 250px;
            height: 550px;
            font-size: 1.5rem;
            font-weight: 600;
            white-space: normal;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            background-image: url('../images/City-line.jpg');
            background-size: 750px 550px; /* total width of all buttons */
            background-repeat: no-repeat;
            background-color: rgba(0, 0, 0, 0.4); /* darker overlay */
            background-blend-mode: darken; /* blends overlay with image */
            color: white;
            transition: all 0.3s ease;
        }

        /* Position each slice */
        .btn-part1 {
            background-position: 0 0;
        }

        .btn-part2 {
            background-position: -250px 0;
        }

        .btn-part3 {
            background-position: -500px 0;
        }

        /* Hover effect: remove darkness, change text color */
        .wide-tall-btn:hover {
            background-color: rgba(0, 0, 0, 0); /* no darkness */
            color: white; /* text color change */
            transform: scale(1.03); /* slight zoom */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }



        button {
            margin-left: 20px;
            margin-right: 20px;
        }

        .btn {
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 15px;
            padding: 12px 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease-in-out;
        }

        .btn-primary {
            /* background-color: #007bff; */
            border-color: #0056b3;
        }

            .btn-primary:hover {
                background-color: crimson;
                border-color: brown;
                transform: scale(1.05);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center g-2">
            <div class="col-auto">
                <button type="button" name="btnReportIssue"
                        class="btn btn-primary wide-tall-btn btn-part1"
                        onclick="window.location.href='@Url.Action("ReportIssue", "ReportIssue")'">
                    @Labels.btnReportIssue
                </button>
            </div>
            <div class="col-auto">
                <button type="button" name="btnEvents"
                        class="btn btn-primary wide-tall-btn btn-part2"
                        onclick="window.location.href='@Url.Action("Events", "Events")'">
                    @Labels.btnEvents
                </button>
            </div>
            <div class="col-auto">
                <button type="button" name="btnReportStatus"
                        class="btn btn-primary wide-tall-btn btn-part3">
                    @Labels.btnReportStatus
                </button>
            </div>
        </div>
    </div>

</body>



